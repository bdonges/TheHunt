<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>TheHunt</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>accountgateway</servlet-name>
    <servlet-class>hunt.web.AccountGateway</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>hunt.web.Login</servlet-class>
  </servlet>  
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>hunt.web.Logout</servlet-class>
  </servlet>  
  <servlet>
    <servlet-name>huntgateway</servlet-name>
    <servlet-class>hunt.web.HuntGateway</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>locationgateway</servlet-name>
    <servlet-class>hunt.web.LocationGateway</servlet-class>
  </servlet>    
  <servlet>
    <servlet-name>playergateway</servlet-name>
    <servlet-class>hunt.web.PlayerGateway</servlet-class>
  </servlet>  
  <servlet>
    <servlet-name>teamgateway</servlet-name>
    <servlet-class>hunt.web.TeamGateway</servlet-class>
  </servlet>  

  <servlet-mapping>
    <servlet-name>accountgateway</servlet-name>
    <url-pattern>/accountgateway</url-pattern>
  </servlet-mapping>    
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>    
  <servlet-mapping>
    <servlet-name>huntgateway</servlet-name>
    <url-pattern>/huntgateway</url-pattern>
  </servlet-mapping> 
    <servlet-mapping>
    <servlet-name>locationgateway</servlet-name>
    <url-pattern>/locationgateway</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>playergateway</servlet-name>
    <url-pattern>/playergateway</url-pattern>
  </servlet-mapping>    
  <servlet-mapping>
    <servlet-name>teamgateway</servlet-name>
    <url-pattern>/teamgateway</url-pattern>
  </servlet-mapping>  
 
</web-app>
